@model WebStorage.Models.ViewModels.LoginViewModel
@{ 
    var returnUrl = @Context.Request.Query["returnurl"];
}

<div class="d-flex justify-content-center align-items-center login-container">
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@returnUrl" class="login-form text-center">
        <h1 class="mb-5 font-weight-light text-uppercase text-center">Login</h1>
        <div class="form-group">
            <input asp-for="UserName" class="form-control rounded-pill form-control-lg" placeholder="User name" type="text">
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control rounded-pill form-control-lg" placeholder="Password" type="password">
        </div>
        <div class="forgot-link form-group d-flex justify-content-between align-items-center">
            <div class="form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                <label asp-for="RememberMe" class="form-check-label">Remember Password</label>
            </div>
            <a asp-action="ForgotPassword">Forgot Password?</a>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn mt-5 rounded-pill btn-lg btn-custom btn-block text-uppercase">Log in</button>
        </div>

        <p class="mt-3 font-weight-normal">Don't have an account? <a asp-controller="Account" asp-action="Register"><strong>Register Now</strong></a></p>
        <p class="mt-3 font-weight-normal">Return to main page ----> <a asp-controller="Home" asp-action="Index"><strong>Main page</strong></a></p>
    </form>
</div>

