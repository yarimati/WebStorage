@model ResetPasswordViewModel
<h2>@ViewData["Title"]</h2>

<div class="d-flex justify-content-center align-items-center reset-password-container">
    <form method="post" asp-controller="Account" asp-action="ResetPassword">
        <h2 class="mb-5 font-weight-light text-uppercase text-center">Reset Password</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="Code" type="hidden" />
        <div class="form-group">
            <input asp-for="Email" size="25" class="form-control rounded-pill form-control-lg" placeholder="Email" type="email">
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control rounded-pill form-control-lg" placeholder="Password" type="password" />
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control rounded-pill form-control-lg" placeholder="Confirm password" type="password" />
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn mt-5 rounded-pill btn-lg btn-custom btn-block text-uppercase">Reset</button>
        </div>
        <p class="mt-3 font-weight-normal">Return to main page ----> <a asp-controller="Home" asp-action="Index"><strong>Main page</strong></a></p>
    </form>
</div>